<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gr.ste.presentation.controllers.PlayerController">
    <top>
        <MenuBar id="menuBar" focusTraversable="true">
            <menus>
                <Menu text="Application">
                    <items>
                        <MenuItem text="Start" />
                        <MenuItem text="Load" />
                        <SeparatorMenuItem />
<!--                        <MenuItem text="Exit" onAction="#onFire" />-->
                    </items>
                </Menu>
