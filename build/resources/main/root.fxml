            </TextField>
            <Button fx:id="fireButton" mnemonicParsing="false" onMouseClicked="#fire" text="Fire"/>
          <VBox.margin>
              <Insets/>
          </VBox.margin>
          <opaqueInsets>
              <Insets/>
